if(isset($_POST["op"]))
{
	$muvelet=$_POST["op"];
	switch($muvelet)
	{
		case "create":
		create($fname) ;
		break;
		case "update" :
		update();
		break;
		case "delete" :
		del(); 
		break;
		case "search" :
		search();
		break;
	}

}


