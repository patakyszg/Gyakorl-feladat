<?php
$fname = "C:\\xampp\\htdocs\\text\\szovegfile.txt";

function create($fname)

{  $text=""; 
	if(isset($_POST["vname"]) &&
	 isset($_POST["kname"]) &&
	 isset($_POST["mail"]) &&
	 isset($_POST["mhely"]))
		$text = "ß".$_POST["vname"]."ß".$_POST["kname"]."ß"
			.$_POST["mail"]."ß".$_POST["mhely"];
	 
	if(isset($_POST["kor"]))	$text = $text."ß".$_POST["kor"];
	else $text = $text."ß";

	if (isset($_POST["nem"]))	
	  $text = $text."ß".$_POST["nem"]."ß";
	else $text = $text."ß";
	 $text = $text."ß"."\n";

	$fv = fopen($fname,"a"); 
		fwrite($fv,$text);		
	 
	fclose($fv);
}
function update() 
{
   echo "update";
}
function del() 
{
   echo "del";
}
function search() 
{
   echo "search";
}


